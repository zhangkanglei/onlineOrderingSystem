<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

    <constant name="struts.enable.DynamicMethodInvocation" value="false" />
    <constant name="struts.devMode" value="true" />

    <package name="default" namespace="/" extends="struts-default">
	  
	  <!-- 定义新的拦截器栈，配置prepare拦截器的alwaysInvokePrepare参数值为false -->
	  <interceptors>
	  	<interceptor-stack name="sshStack">
	  		<interceptor-ref name="paramsPrepareParamsStack">
	  			<param name="prepare.alwaysInvokePrepare">false</param>
	  		</interceptor-ref>
	  	</interceptor-stack>
	  </interceptors>
	  
	  <!-- 使用新的拦截器栈 -->
	  <default-interceptor-ref name="sshStack"></default-interceptor-ref>
	  
      <!-- dishes -->
      <action name="dishes-*" class="dishesAction"
      	method="{1}">
      	<result name="list">homepage.jsp</result>
      	<result type="stream" name="delete">
      		<param name="contentType">text/html</param>
      		<param name="inputName">inputStream</param>
      	</result>
      	<result name="input">dishes-input.jsp</result>
      	<result name="dishesList">dishes-list.jsp</result>
      	<result name="success" type="redirect">/dishes-getAllDishes</result>
      	<result name="addCarOK">showCart.jsp</result>
      	<result name="alreadyExist">alreadyExist.jsp</result>
      	<result name="deleteCar">/showCart.jsp</result>
      	<result name="fuzzy">homepage.jsp</result>
      	<result name="synopsis">synopsis.jsp</result>
      	<result name="cleanCar">homepage.jsp</result>
      </action>
      
      <!-- user -->
      <action name="user-*" class="userAction" method="{1}">
      	<result name="list">user-list.jsp</result>
      	<result name="fuzzy">user-list.jsp</result>
      	<result name="registerSuccess">login.jsp</result>
      	<result name="loginSuccess" type="redirect">/dishes-list</result>
      	<result name="travel" type="redirect">/dishes-list</result>
      	<result name="existSuccess">login.jsp</result>
      	<result name="error">error.jsp</result>
      	<result type="stream" name="ajax-success">
      		<param name="contentType">text/html</param>
      		<param name="inputName">inputStream</param>
      	</result>
      	<result name="update">user-update.jsp</result>
      	<result name="updateSuccess">homepage.jsp</result>
      	<result name="orderList">userOrderList.jsp</result>
      	
      </action>
      
     <action name="orderItem-*" class="orderItemAction" method="{1}">
     	<result name="save-success">homepage.jsp</result>
     	<result name="list">order-list.jsp</result>
     	<result name="orderItemList">orderItem-list.jsp</result>
     	<result name="update" type="redirect">/orderItem-list</result>
     	<result name="fuzzy">order-list.jsp</result>
     </action>
     
     <action name="admin-*" class="adminAction" method="{1}">
     	<result name="login-success">systemAdministrator.jsp</result>
     	<result name="login-fail">error.jsp</result>
     	<result name="input">admin-update.jsp</result>
     	<result name="list">admin-list.jsp</result>
     	<result name="success" type="redirect">/admin-list</result>
     	<result name="existSuccess">admin-login.jsp</result>
     	
     </action> 
     
    </package>
	


</struts>
